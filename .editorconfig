root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
continuation_indent_size = 8
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = true
# max_line_length = 120
tab_width = 4
spaces_around_operators = true
wildcard_import_limit = 5

[Makefile]
insert_final_newline = true
indent_style = tab
indent_size = 4

[*.{js, py}]
quote_type = single

[*.properties]
arguments_literal = true

[*.{yml, yaml, json}]
indent_size = 2

[*.{kt, kts, groovy, java}]
disabled_rules = import-ordering, no-wildcard-imports, max_line_length
